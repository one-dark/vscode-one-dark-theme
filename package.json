{
  "name": "one-dark-theme",
  "displayName": "One Dark Theme",
  "description": "One Dark theme for Visual Studio Code",
  "version": "0.0.0-semantically-released",
  "publisher": "mskelton",
  "author": "Mark Skelton",
  "repository": {
    "type": "git",
    "url": "https://github.com/one-dark/vscode-one-dark-theme.git"
  },
  "bugs": {
    "url": "https://github.com/one-dark/vscode-one-dark-theme/issues"
  },
  "homepage": "https://github.com/one-dark/vscode-one-dark-theme#readme",
  "license": "ISC",
  "keywords": [
    "one-dark",
    "one-dark-vivid",
    "one-dark-italic",
    "vscode-theme",
    "vscode"
  ],
  "scripts": {
    "build": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "lint": "eslint .",
    "theme": "ts-node ./generator/index.ts",
    "theme:watch": "nodemon ./generator/index.ts",
    "ts": "tsc",
    "watch": "yarn build --sourcemap --watch",
    "vscode:prepublish": "yarn theme && yarn build --minify"
  },
  "engines": {
    "vscode": "^1.42.0"
  },
  "categories": [
    "Themes"
  ],
  "icon": "static/icon.png",
  "galleryBanner": {
    "color": "#2d323b",
    "theme": "dark"
  },
  "activationEvents": [
    "*"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "main": "./out/main.js",
  "contributes": {
    "themes": [
      {
        "label": "One Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/one-dark.json"
      },
      {
        "label": "One Dark Vivid",
        "uiTheme": "vs-dark",
        "path": "./themes/one-dark-vivid.json"
      }
    ],
    "configuration": {
      "title": "One Dark",
      "properties": {
        "oneDark.bold": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Uses bold font for certain language keywords."
        },
        "oneDark.italic": {
          "type": "boolean",
          "default": true,
          "description": "Uses italic font for language keywords and comments."
        },
        "oneDark.vivid": {
          "type": "boolean",
          "default": false,
          "deprecationMessage": "Use the One Dark Vivid color theme instead.",
          "markdownDescription": "Uses the [vivid](https://atom.io/themes/one-dark-vivid-syntax) color palette."
        }
      }
    }
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/eslint-parser": "^7.13.8",
    "@mskelton/eslint-config": "^6.1.0",
    "@types/node": "^14.0.11",
    "@types/vscode": "^1.42.0",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "esbuild": "^0.12.21",
    "eslint": "^7.21.0",
    "eslint-plugin-sort": "^1.5.0",
    "nodemon": "^2.0.7",
    "prettier": "2.3.2",
    "semantic-release": "^17.4.1",
    "semantic-release-vsce": "^3.2.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "vsce": "^1.74.0"
  }
}
